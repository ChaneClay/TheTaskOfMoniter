<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
  	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
  	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
  	id="WebApp_ID" version="3.1">
  	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
			<taglib-location>/WEB-INF/fmt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/fmt-rt</taglib-uri>
			<taglib-location>/WEB-INF/fmt-rt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/c.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/core-rt</taglib-uri>
			<taglib-location>/WEB-INF/c-rt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
			<taglib-location>/WEB-INF/sql.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/sql-rt</taglib-uri>
			<taglib-location>/WEB-INF/sql-rt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/x</taglib-uri>
			<taglib-location>/WEB-INF/x.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/x-rt</taglib-uri>
			<taglib-location>/WEB-INF/x-rt.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	
	
	
	
	<!-- 性能监控监听器 -->
	<listener>
		<listener-class>com.itheima.listener.MonitorListener</listener-class>
	</listener>
	
  <servlet>
    <servlet-name>ShowCPUDataController</servlet-name>
    <servlet-class>com.itheima.controller.ShowCPUDataController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowDiskDataController</servlet-name>
    <servlet-class>com.itheima.controller.ShowDiskDataController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowDiskDirController</servlet-name>
    <servlet-class>com.itheima.controller.ShowDiskDirController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowAllFileController</servlet-name>
    <servlet-class>com.itheima.controller.ShowAllFileController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FileDownloadController</servlet-name>
    <servlet-class>com.itheima.controller.FileDownloadController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadController</servlet-name>
    <servlet-class>com.itheima.controller.UploadController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RemoteDesktopController</servlet-name>
    <servlet-class>com.itheima.controller.RemoteDesktopController</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>ShowCPUDataController</servlet-name>
    <url-pattern>/ShowCPUDataController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowDiskDataController</servlet-name>
    <url-pattern>/ShowDiskDataController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowDiskDirController</servlet-name>
    <url-pattern>/ShowDiskDirController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowAllFileController</servlet-name>
    <url-pattern>/ShowAllFileController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileDownloadController</servlet-name>
    <url-pattern>/FileDownloadController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadController</servlet-name>
    <url-pattern>/UploadController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RemoteDesktopController</servlet-name>
    <url-pattern>/RemoteDesktopController</url-pattern>
  </servlet-mapping>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>